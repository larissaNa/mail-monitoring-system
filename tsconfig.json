{
  "compilerOptions": {
    "target": "ES6",                // versão de JS de saída
    "module": "commonjs",           // formato de módulos
    "rootDir": "src",               // pasta de origem
    "outDir": "dist",               // pasta de saída
    "esModuleInterop": true,        // compatibilidade com import/export
    "strict": true,                 // boas práticas de tipagem
    "skipLibCheck": true,           // ignora checagem de libs
    "baseUrl": ".",                 // base para paths
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],          // inclui todos os arquivos TS dentro de src
  "exclude": ["node_modules", "dist"]
}
